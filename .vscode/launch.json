    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Server",
            "preLaunchTask": "${defaultBuildTask}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",
            "args": [
                "--server",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Client",
            "preLaunchTask": "${defaultBuildTask}",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}